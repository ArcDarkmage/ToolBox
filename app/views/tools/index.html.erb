<h1>Ferramentas encontradas:</h1>

<div class="cards">
  <% @tools.each do |tool| %>
    <div class="card-trip">
     <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://m.media-amazon.com/images/I/51rP6L10GKL._AC_SX569_.jpg)">
          <p style="text-align: center"><%= tool.name %>
          <br><span style="font-size: 14px"><%= tool.price_cents / 100 %></span></p>
      </div>
    </div>
  <% end %>
</div>
